<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MarkdownEditor.MainWindow"
        Title="Markdown Editor"
        Width="600"
        Height="600"
		WindowStartupLocation="CenterScreen">
	
		<Window.Styles>
			<Style Selector="RadioButton.mode-switch">
				<Setter Property="Background" Value="#333333"/>
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="BorderBrush" Value="#555555"/>
				<Setter Property="BorderThickness" Value="1"/>
				<Setter Property="Padding" Value="0"/>
				<Setter Property="Template">
					<ControlTemplate TargetType="RadioButton">
						<Border Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="4">
							<StackPanel Orientation="Horizontal" Margin="10,5,5,5" HorizontalAlignment="Left">
								<Border x:Name="Indicator"
										Width="14" Height="14"
										CornerRadius="2"
										BorderBrush="White"
										BorderThickness="2"
										Margin="0,0,10,0"/>
								<ContentPresenter
										Content="{TemplateBinding Content}"
										VerticalAlignment="Center"
										Margin="0,0,10,0"
										Foreground="{TemplateBinding Foreground}" />
							</StackPanel>
						</Border>
					</ControlTemplate>
				</Setter>
			</Style>
			<Style Selector="RadioButton.mode-switch:checked /template/ Border#Indicator">
				<Setter Property="Background" Value="LimeGreen"/>
			</Style>
			<Style Selector="RadioButton.mode-switch:pointerover">
				<Setter Property="Background" Value="#444444"/>
				<Setter Property="BorderBrush" Value="#AAAAAA"/>
			</Style>
			<Style Selector="RadioButton.mode-switch:pressed">
				<Setter Property="Background" Value="#555555"/>
			</Style>
			<Style Selector="RadioButton.mode-switch:checked /template/ Border#Indicator">
				<Setter Property="Background" Value="LimeGreen"/>
			</Style>
			<Style Selector="RadioButton.mode-switch:pointerover /template/ Border#Indicator">
				<Setter Property="BorderBrush" Value="#FFFFFF"/>
			</Style>
		</Window.Styles>


		<DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл" FontSize="16" FontWeight="Bold" Padding="10,5" Background="#333333" Foreground="White">
				<MenuItem Header="Открыть" Click="OpenFile_Click" />
				<Separator />
                <MenuItem Header="Сохранить" Click="SaveFile_Click" />
				<Separator />
                <MenuItem Header="Экспорт" Click="ExportFile_Click" />
                <Separator />
                <MenuItem Header="Выход" Click="Exit_Click" />
            </MenuItem>
        </Menu>

        <StackPanel DockPanel.Dock="Top">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
				<RadioButton Name="EditModeRadio" Classes="mode-switch" Content="Редактор" IsChecked="True" Margin="10,0" />
				<RadioButton Name="PreviewModeRadio" Classes="mode-switch" Content="Превью" Margin="10,0" />
			</StackPanel>

		</StackPanel>

        <Grid>
            <TextBox Name="MarkdownEditor"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="14"
                     Margin="5"
                     IsVisible="{Binding #EditModeRadio.IsChecked}" />

            <ScrollViewer Name="PreviewScrollViewer"
                          Margin="5"
                          IsVisible="{Binding #PreviewModeRadio.IsChecked}">
                <Border Background="LightGray" Padding="10">
                    <ContentControl Name="MarkdownPreview" />
                </Border>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>