<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSharpMobileApp.Views.HomePage"
             Title="Moskvitin_221-321">

    <!-- Градиентный фон: сверху лёгкий серо-голубой, снизу белый -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E3F2FD" Offset="0.0" />
            <GradientStop Color="#FFFFFF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <!-- Большой центрированный заголовок -->
        <Label
            Text="Moskvitin_221-321"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center" />

        <!-- Немного отступа -->
        <Label
            Text="Что вы хотите сделать?"
            FontSize="18"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            TextColor="Gray" />

        <Button
            Text="ToDo-List"
            Command="{Binding GoToToDoListCommand}"
            WidthRequest="200"
            HorizontalOptions="Center"/>

        <Button
            Text="Добавить задачу"
            Command="{Binding GoToAddToDoCommand}"
            WidthRequest="200"
            HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>